{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build using mingw64 g++",
            "type": "shell",
            "command": "g++",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "-g",
                "-o2",
                "-fdump-tree-all",
                {
                    "value": "${file}",
                    "quoting": "strong"
                }
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}